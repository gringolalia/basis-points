/*
---
name: Container (Fluid)
category:
  - object/component
  - object/component/container
---

```html
<div class="_c-container-fluid">
  ...
</div>
```
*/

.{_prefix}c-container-fluid {
  container-margin = _base-line-height;

  _container-fluid();
  padding-right: (container-margin / 2);
  padding-left: (container-margin / 2);

  +_media-min(md) {
    padding-right: container-margin;
    padding-left: container-margin;
  }
}

/*
---
name: Container
category: object/component
---

```html
<div class="_c-container">
  ...
</div>
```
*/

.{_prefix}c-container {
  @extend .{_prefix}c-container-fluid;
  _container();
}
