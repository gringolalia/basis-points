_select() {
  position: relative;
  display: inline-block;
  overflow: hidden;
  background-color: #fff;
  _form-control-base-border();

  &::before {
    _position(absolute, 50%, (_between-lines * 2), null, null, 1);
    transform: translateY(-50%);
    _ic();
    content: "\e902";
  }

  > select,
  &__label {
    _form-control-base-padding();
    _padding-right(1.5);
  }

  > select {
    _position(relative, null, null, null, null, 1);
    opacity: 0 !important;
    margin: 0;
    appearance: none;
    border: none;
    outline: 0;
  }

  &__label {
    _position(absolute, 0, 0, 0, 0, 0);
  }
}
