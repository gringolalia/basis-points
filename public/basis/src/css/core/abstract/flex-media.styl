_flex-media() {
  +_media-min(md) {
    display: flex;
  }

  &__figure {
    _background-image-cover();
    flex: none;

    > img {
      width: 100%;

      +_media-min(md) {
        width: auto;
      }
    }

    > * {
      +_media-min(md) {
        vertical-align: top;
        margin-top: _between-lines;
      }
    }
  }

  &__body {
    flex: 1;
  }
}
