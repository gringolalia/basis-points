//
// Sets px and rem font-sizes
//
// @param  rem|px  font-size
//
_font-size(font-size) {
  unit = unit(font-size);
  if (unit == 'px') {
    font-size: font-size;
    font-size: _px2rem(font-size);
  } else if (unit == 'rem') {
    font-size: _rem2px(font-size);
    font-size: font-size;
  } else {
    font-size: font-size;
  }
}

//
// Sets line-height for vertical rhythum
//
// @param  rem|px  font-size  font size
//
_line-height(font-size) {
  unit = unit(font-size);
  px   = font-size;
  if (unit == 'rem') {
    px = _rem2px(font-size);
  }
  line-height: (_vertical-rhythm(px) / _strip-unit(px));
}

//
// Sets px and rem font-sizes and line-height for vertical rhythum
//
// @param  rem|px  font-size
//
// h1 {
//   _font-size-line-height(1.5rem);
// }
//
_font-size-line-height(font-size) {
  unit = unit(font-size);
  rem  = font-size;
  if (unit == 'px') {
    rem = _px2rem(font-size);
  }
  _font-size(rem);
  _line-height(rem);
}
